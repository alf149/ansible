  #Windows-server 2019/2022
  #win2019
  config.vm.define "win2019.test", autostart: false do |win2019|
    win2019.vm.provider "virtualbox" do |v|
      v.gui = false
      v.memory = 4096
      v.cpus = 2
      v.linked_clone = true
      v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
      v.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
    end
    win2019.vm.box = "gusztavvargadr/windows-server"
    win2019.vm.box_check_update = false
    win2019.vm.hostname = "win2019"
    win2019.vm.network :private_network, ip: "192.168.56.80", hostname: true
    win2019.vm.network :forwarded_port, guest: 3389, host: 63389, auto_correct: true
    win2019.vm.network :forwarded_port, guest: 80, host: 680, auto_correct: true
    win2019.vm.network :forwarded_port, guest: 80, host: 6443, auto_correct: true
    win2019.vm.provision "shell", path: "files/windows/setup_winrm.ps1"
  end

