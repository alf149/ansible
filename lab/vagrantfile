# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  # Default Virtualbox settings
  config.vm.box_check_update = true
  config.ssh.insert_key = false
  config.vm.synced_folder ".", "/vagrant", disabled: true

  # Defaults RAM and CPU for all
  config.vm.provider "virtualbox" do |v|
    v.gui = false
    v.memory = 2048
    v.cpus = 2
    v.linked_clone = true
  end
   
  # Raspberry 1.
  config.vm.define "pi01.test", autostart: false do |pi01|
    pi01.vm.box = "geerlingguy/ubuntu2004"
    pi01.vm.box_check_update = true
    pi01.vm.hostname = "pi01.test"
    pi01.vm.network :private_network, ip: "192.168.100.11"
    pi01.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
    pi01.vm.provision "ansible" do |ansible|
      ansible.config_file = "ansible.cfg"
      #ansible.galaxy_role_file = "requirements.yml"
      ansible.playbook = "main.yml"
    end
  end

  # Raspberry 2.
  config.vm.define "pi02.test", autostart: false do |pi02|
    pi02.vm.box = "geerlingguy/ubuntu2004"
    pi02.vm.hostname = "pi02.test"
    pi02.vm.network :private_network, ip: "192.168.100.12"
    pi02.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
    pi02.vm.provision "ansible" do |ansible|
      ansible.config_file = "ansible.cfg"
      #ansible.galaxy_role_file = "requirements.yml"
      ansible.playbook = "main.yml"
    end
  end

  # App 01.
  config.vm.define "app01.test", autostart: false do |app01|
    app01.vm.box = "geerlingguy/ubuntu2004"
    app01.vm.hostname = "app01.test"
    app01.vm.network :private_network, ip: "192.168.100.21"
    app01.vm.provision "ansible" do |ansible|
      ansible.config_file = "ansible.cfg"
      #ansible.galaxy_role_file = "requirements.yml"
      ansible.playbook = "main.yml"
    end
  end


  # App 02.
  config.vm.define "app02.test", autostart: false do |app02|
    app02.vm.box = "geerlingguy/ubuntu2004"
    app02.vm.hostname = "app02.test"
    app02.vm.network :private_network, ip: "192.168.100.22"
    app02.vm.provision "ansible" do |ansible|
      ansible.config_file = "ansible.cfg"
      #ansible.galaxy_role_file = "requirements.yml"
      ansible.playbook = "main.yml"
    end
  end

  # DB 01.
  config.vm.define "db01.test", autostart: false do |db01|
    db01.vm.box = "geerlingguy/ubuntu2004"
    db01.vm.hostname = "db01.test"
    db01.vm.network :private_network, ip: "192.168.100.31"
    db01.vm.provision "ansible" do |ansible|
      ansible.config_file = "ansible.cfg"
      #ansible.galaxy_role_file = "requirements.yml"
      ansible.playbook = "main.yml"
    end
  end
end